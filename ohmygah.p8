-- function to draw X pixels of X color, xy to start at
-- returns ending xy
function DrawX(_color, length, x, y)
    -- set pen color.
    color(_color)
    -- enter draw loop
    -- we assume starting position is valid.
    count = 0
    while count < length do
        pset(x,y)
        x += 1
        count += 1
        if x > 127 then
            -- cursor needs to "carriage return"
            x = 0
            y += 1
        end
        -- just in case!
        if y > 127 then
            -- went off the bottom! shouldnt happen.
            stop("Cursor left bottom of screen!", 0, 0, 8)
        end
    end
    -- done drawng, return the new xy
    return {x,y}
end


